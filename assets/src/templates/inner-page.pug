                                        span 10 октября – 10 ноября
                                    ul.nav
                                        li.nav-item
                                            a.nav-link(href='#') Подобрать резюме
                                        li.nav-item
                                            a.nav-link(href='#') Продлить Premium
                                        li.nav-item
                                            a.nav-link(href='#') Обновить дату публикации
                                        li.nav-item
                                            a.nav-link(href='#') Еще
                                                i.fas.fa-chevron-down
                                .col-md-2.col-sm-4
                                    p.response
                                        span.count-response 378
                                        span.text-response &nbspоткликов
                                        span.new-response 23

